<resources xmlns:tools="http://schemas.android.com/tools"><!--
  Tema base do aplicativo.
  - Usa Theme.MaterialComponents.DayNight.DarkActionBar:
    Isso habilita a funcionalidade de tema claro/escuro (DayNight)        e fornece uma barra de ação padrão (DarkActionBar) que vamos
    controlar na MainActivity.
-->
    <style name="Theme.Android" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Cores primárias de branding -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item> <!-- Removido se não usado, mas mantido por padrão -->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Cores secundárias de branding (opcional, bom para Floating Action Buttons, etc.) -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item> <!-- Removido se não usado -->
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Cores de fundo e superfície que mudam entre modo claro e escuro -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- Cor da Barra de Status (a barra do topo do celular com relógio e bateria) -->
        <!-- Usar ?attr/colorPrimaryVariant faz com que ela se adapte ao tema -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style></resources>