<?xml version="1.0" encoding="utf-8"?><navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@+id/navigation_home">

    <!-- FRAGMENTOS DA BARRA DE NAVEGAÇÃO INFERIOR -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.android.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_itemListFragment"
            app:destination="@id/itemListFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.android.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.android.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <!-- FRAGMENTOS DE TELAS SECUNDÁRIAS -->
    <fragment
        android:id="@+id/itemListFragment"
        android:name="com.example.android.ui.ItemListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_item_list">

        <action
            android:id="@+id/action_itemListFragment_to_itemDetailFragment"
            app:destination="@id/itemDetailFragment" />

        <!-- ESTA É A AÇÃO CRÍTICA QUE ESTAVA CAUSANDO O ERRO. -->
        <!-- Garanta que o ID e o destino estão EXATAMENTE assim. -->
        <action
            android:id="@+id/action_itemListFragment_to_httpFragment"
            app:destination="@id/httpFragment" />
    </fragment>

    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.example.android.ItemDetailFragment"
        android:label="Detalhe do Item"
        tools:layout="@layout/fragment_item_detail">
        <argument
            android:name="itemId"
            app:argType="integer" />
        <argument
            android:name="itemName"
            app:argType="string" />
        <argument
            android:name="itemDescription"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/httpFragment"
        android:name="com.example.android.ui.HttpFragment"
        android:label="Municípios de SP (IBGE)"
        tools:layout="@layout/fragment_http" />

</navigation>
