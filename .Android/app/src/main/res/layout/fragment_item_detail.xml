<?xml version="1.0" encoding="utf-8"?>
<!-- 1. O ScrollView é a raiz, permitindo que o conteúdo role se for muito grande. -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemDetailFragment">

    <!-- 2. O ConstraintLayout fica DENTRO do ScrollView para organizar os elementos. -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- TextView para exibir o nome do item -->
        <TextView
            android:id="@+id/detail_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nome do Produto Grande" />

        <!-- TextView para exibir a descrição completa do item -->
        <TextView
            android:id="@+id/detail_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="4dp"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_item_name"
            tools:text="Aqui vai a descrição completa e detalhada do item que foi selecionado na lista anterior. Pode ser um texto longo, e por isso o ScrollView é importante para garantir que todo o conteúdo seja visível para o usuário." />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
