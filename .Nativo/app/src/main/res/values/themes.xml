<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for light mode (using Material Components). -->
    <style name="Base.Theme.Nativo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Material Components color attributes -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_light_primaryContainer</item> <!-- Usando primaryContainer como Variant -->
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>

        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorSecondaryVariant">@color/md_theme_light_secondaryContainer</item> <!-- Usando secondaryContainer como Variant -->
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>

        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>

        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>

        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>

        <!-- Atributos do Material 3 removidos para evitar erros de "not found" -->
        <!-- Ex: colorPrimaryContainer, colorTertiary, colorSurfaceVariant, colorInverseSurface, etc. -->

        <!-- Você pode adicionar outros atributos específicos do Material Components aqui, se necessário -->
        <!-- Por exemplo, para a barra de status -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Nativo" parent="Base.Theme.Nativo" />
</resources>