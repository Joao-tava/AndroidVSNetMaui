<Shell
    x:Class="App_Paridade.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:App_Paridade.Views">

    <TabBar>
        <ShellContent
            Title="Itens"
            ContentTemplate="{DataTemplate views:ItemsPage}" />

        <ShellContent
            Title="API IBGE"
            ContentTemplate="{DataTemplate views:ApiDataPage}" />

        <ShellContent
            Title="Localizacao"
            ContentTemplate="{DataTemplate views:LocationPage}" />
    </TabBar>

    <!-- Botao no topo (Toolbar) -->
    <Shell.ToolbarItems>
        <ToolbarItem Text="Trocar Tema" Clicked="OnThemeToggleClicked" />
    </Shell.ToolbarItems>
</Shell>
